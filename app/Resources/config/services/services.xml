<?xml version="1.0"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="current_time" class="DateTime">
            <argument>now</argument>
        </service>

        <service id="undine.drupal_client.middleware.ftp_credentials" class="Undine\Drupal\FtpCredentialsMiddleware" factory-class="Undine\Drupal\FtpCredentialsMiddleware" factory-method="create" public="false">
        </service>

        <service id="undine.drupal_client.handler" class="GuzzleHttp\HandlerStack" factory-class="GuzzleHttp\HandlerStack" factory-method="create" public="false">
            <call method="after">
                <argument>cookies</argument>
                <argument type="service" id="undine.drupal_client.middleware.ftp_credentials"/>
                <argument>ftp_credentials</argument>
            </call>
        </service>

        <service id="undine.drupal_client.guzzle" class="GuzzleHttp\Client" public="false">
            <argument type="collection">
                <argument key="handler" type="service" id="undine.drupal_client.handler"/>
            </argument>
        </service>

        <service id="undine.drupal_client" class="Undine\Drupal\Client">
            <argument type="service" id="undine.drupal_client.guzzle"/>
        </service>

        <service id="web_debug_toolbar.angular_profiler" class="Undine\AppBundle\DataCollector\AngularDataCollector">
            <tag name="data_collector" template="views/toolbar/angular.html.twig" id="angular"/>
        </service>

        <service id="event_loop" class="React\EventLoop\LoopInterface" factory-class="React\EventLoop\Factory" factory-method="create">
        </service>

        <service id="output_flusher" class="Undine\Http\OutputFlusher">
            <argument>4096</argument>
        </service>

    </services>

</container>
