<?xml version="1.0"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="undine.form.type.api.site_connect" class="Undine\Form\Type\Api\SiteConnectType">
            <tag name="form.type"/>
        </service>

        <service id="undine.form.type.api.module_enable" class="Undine\Form\Type\Api\ModuleEnableType">
            <tag name="form.type"/>
        </service>

        <service id="undine.form.type.api.module_disable" class="Undine\Form\Type\Api\ModuleDisableType">
            <tag name="form.type"/>
        </service>

        <service id="undine.form.type.api.extension_install_from_url" class="Undine\Form\Type\Api\ExtensionDownloadFromUrlType">
            <tag name="form.type"/>
        </service>

        <service id="undine.form.type.api.extension_update" class="Undine\Form\Type\Api\ExtensionUpdateType">
            <tag name="form.type"/>
        </service>

        <service id="undine.form.type.api.site_ping" class="Undine\Form\Type\Api\SitePingType">
            <tag name="form.type"/>
        </service>

    </services>

</container>
