<?xml version="1.0"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="doctrine.repository.user" class="Undine\Repository\UserRepository" factory-service="doctrine.orm.default_entity_manager" factory-method="getRepository">
            <argument>Model:User</argument>
        </service>

        <service id="doctrine.repository.staff" class="Undine\Repository\StaffRepository" factory-service="doctrine.orm.default_entity_manager" factory-method="getRepository">
            <argument>Model:Staff</argument>
        </service>

    </services>

</container>
