<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd" xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">

    <entity repository-class="Undine\Repository\SiteRepository" name="Undine\Model\Site" change-tracking-policy="DEFERRED_EXPLICIT">

        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="url" type="uri" length="255"/>
        <field name="privateKey" type="string" length="1750"/>
        <field name="publicKey" type="string" length="500"/>
        <field name="phpVersion" type="string" length="50" nullable="true"/>
        <field name="phpVersionId" type="number" nullable="true"/>
        <field name="databaseSchema" type="string" length="50" nullable="true"/>
        <field name="databaseDriver" type="string" length="10" nullable="true"/>
        <field name="databaseDriverVersion" type="string" length="50" nullable="true"/>
        <field name="databaseTablePrefix" type="string" length="50" nullable="true"/>
        <field name="cronKey" type="string" length="250" nullable="true"/>
        <field name="cronLastRunAt" type="datetime" nullable="true"/>
        <field name="siteName" type="string" length="250" nullable="true"/>
        <field name="siteMail" type="string" length="250" nullable="true"/>
        <field name="siteKey" type="string" length="250" nullable="true"/>
        <field name="drupalRoot" type="string" length="250" nullable="true"/>
        <field name="drupalVersion" type="string" length="50" nullable="true"/>
        <field name="updateLastCheckAt" type="datetime" nullable="true"/>
        <field name="systemChecksum" type="string" length="32" nullable="true"/>
        <field name="createdAt" type="datetime">
            <gedmo:timestampable on="create"/>
        </field>

        <field name="deletedAt" type="datetime" nullable="true"/>
        <gedmo:soft-deleteable field-name="deletedAt" time-aware="false"/>

        <many-to-one target-entity="Undine\Model\User" field="user" inversed-by="sites">
        </many-to-one>

    </entity>

</doctrine-mapping>
