{% set flash_messages = app.session.flashbag.all %}
{% if flash_messages|length %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                {% for label, flashes in flash_messages %}
                    {% for flash in flashes %}
                        <div class="alert alert-{{ label }}">
                            {{ flash }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}
