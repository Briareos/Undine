{% extends 'admin/layout.html.twig' %}

{% block body %}
    <style>
        .table td:first-child {
            width: 10%;
            min-width: 100px;
            white-space: nowrap;
        }

        .ui.admin.body.container {
            max-width: 550px !important;
        }

        .table .ui.button {
            /* Fixes a semantic css bug where the buttons are not aligned */
            vertical-align: bottom;
        }
    </style>

    <h2>Delete staff member</h2>

    <p>Are you sure you want to delete the following staff member?</p>

    <table class="ui definition table">
        <tbody>
        <tr>
            <td>Name</td>
            <td>
                {{ staff.name }}
            </td>
        </tr>
        <tr>
            <td>Email</td>
            <td>
                {{ staff.email }}
            </td>
        </tr>
        <tr>
            <td>Last active at</td>
            <td title="{{ staff.lastActiveAt | date('h:i d.m.Y.') }}">
                {{ staff.lastActiveAt | time_diff }}
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                {{ form_start(deleteForm) }}
                <button class="ui labeled icon negative button">
                    <i class="erase icon"></i>
                    Delete
                </button>

                <a class="ui labeled icon button" href="{{ path('admin-staff_view', {id: staff.id}) }}">
                    <i class="angle left icon"></i>
                    Back
                </a>
                {{ form_end(deleteForm) }}
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}