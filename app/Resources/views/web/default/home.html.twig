{% extends 'web/layout.html.twig' %}

{% block body %}

    Frontpage!

    {% if app.user %}
        <br>
        Welcome back, {{ app.user.email }}
        <br>
        <a href="{{ path('web-dashboard') }}">Click here to go to your dashboard</a>
    {% else %}
        <br>
        Welcome!
        <br>
        <a href="{{ path('web-dashboard') }}">Please log in to access your dashboard</a>
    {% endif %}


    {% if app.user %}
        <br>
        <a href="{{ logout_url('web') }}">Log out</a>
    {% endif %}

    {% if app.debug %}
        <br>
        <a href="{{ path('admin-home') }}">Admin panel</a>
    {% endif %}
    <br>
    <a href="{{ path('web-docs_api') }}">API documentation</a>

{% endblock %}
